<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	<extension
         point="org.eclipse.ui.views">
		<view
            allowMultiple="true"
            class="org.eclipse.riena.example.ping.client.views.SonarView"
            id="ping.sonar.view"
            name="PingView"
            restorable="true">
		</view>
	</extension>
	<extension
         point="org.eclipse.riena.core.startups">
		<startup
            activateSelf="true">
		</startup>
	</extension>
	<extension
         point="org.eclipse.riena.ui.swt.imagePaths">
		<path
            path="icons">
		</path>
	</extension>

	<extension
         point="org.eclipse.ui.commands">
		<command
            defaultHandler="org.eclipse.riena.example.ping.client.SonarHandler"
            id="global.ping.sonar"
            name="SonarHandler">
		</command>
	</extension>
	<extension
         point="org.eclipse.ui.menus">
		<menuContribution
      locationURI="menu:org.eclipse.ui.main.menu">
			<menu
         id="pingMenu"
         label="Ping"
         mnemonic="p">
				<command
            commandId="global.ping.sonar"
            label="Sonar"
            style="push">
				</command>
			    <visibleWhen
          			checkEnabled="true">
      				 <systemTest
             			property="riena.sonar.menu.visible"
             			value="true">
       				</systemTest>
   				 </visibleWhen>
			</menu>
		</menuContribution>

	</extension>

</plugin>
